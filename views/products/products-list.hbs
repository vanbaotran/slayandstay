   <div class='topLine'><h3 class='h3-inactive'>Shop><h3 class='h3-active'>Products</h3>
</div>
<section id='products-list'>

<ul>
    {{#each allProducts}}
    <li>
        <div class='eachProduct'>
            <a href='/products/{{_id}}'>
            <img class='product-img' src='{{pictureURL.[0]}}'> 
            <a href='/products/{{_id}}'>
                <div class='productInfo'>
                    <div class='sub-productInfo'>
                        <p class='productName'>{{productName}}</p> 
                        <p class='productPrice'>{{price}}â‚¬</p>
                    </div> 
            </a>
            {{#if favorite}}
            <a href='/products/{{_id}}/favorite'>
                <div class='wishlist'>
                    <img class='heart' src='https://res.cloudinary.com/vanbaotran/image/upload/v1623145429/photos/heart-filled_njjmsq.png'>
                </div>
            </a>
            {{else}}
            <a href='/products/{{_id}}/favorite'>
                <div class='wishlist'>
                    <img class='heart' src='https://res.cloudinary.com/vanbaotran/image/upload/v1623145410/photos/heart_jmddcq.png'>
                </div>
            </a>
            {{/if}}
        </div>  
    </li>
    {{/each}}
</ul>
{{#if isAdmin}}
<button><a href='/products/create'>Upload an item</a></button>
{{/if}}
</section>

